<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.constanza.yocomoapp.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/toaster"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/YoComo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yo Como"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre de Usuario"
        android:inputType="text"
        android:textSize="25dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="25dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignStart="@+id/usernameEditText"
        android:layout_alignEnd="@+id/usernameEditText"
        />

    <Button
        android:id="@+id/entrarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="28dp"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_alignEnd="@+id/passwordEditText" />


</RelativeLayout>
